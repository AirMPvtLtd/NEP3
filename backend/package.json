{
  "name": "nep-workbench-backend",
  "version": "1.0.0",
  "description": "NEP WorkBench API â€” multi-role educational platform backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "seed": "node seeders/index.js",
    "seed:clear": "node seeders/clear.js",
    "migrate": "node migrations/run.js",
    "logs": "tail -f logs/combined.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs nep-workbench-api",
    "backup": "node scripts/backup.js full",
    "backup:full": "node scripts/backup.js full",
    "backup:incremental": "node scripts/backup.js incremental",
    "backup:s3": "node scripts/backup-s3.js",
    "migrate:ttl": "node scripts/migrate-ttl.js",
    "docker:build": "docker build -t nep-workbench-backend .",
    "docker:run": "docker run -p 3000:3000 nep-workbench-backend"
  },
  "keywords": [
    "education",
    "nep-2020",
    "ai",
    "mistral",
    "kalman-filter",
    "meta-learning",
    "competency-based-learning"
  ],
  "author": "NEP Workbench Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@sentry/node": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^6.15.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.4",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.2",
    "sib-api-v3-sdk": "^8.5.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "xss": "^1.0.15",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mongodb-memory-server": "^9.0.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
